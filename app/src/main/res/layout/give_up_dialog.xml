<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/purple"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:padding="5dp"
              android:weightSum="1">

    <TextView
        android:id="@+id/giveUpHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to give up?"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_weight="0.17"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/giveUpHeader"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="15dp"
        >

        <Button
            android:textAllCaps="false"
            android:id="@+id/yesGiveUp"
            android:textColor="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Give Up"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@color/brightGreen"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"/>

        <Button
            android:textAllCaps="false"
            android:id="@+id/keepPlaying"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Keep Playing"
            android:textColor="@color/purple"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@color/brightGreen"
            android:layout_weight="0.5"/>


    </LinearLayout>

</LinearLayout>