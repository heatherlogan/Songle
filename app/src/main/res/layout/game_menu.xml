<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heatherlogan.songle.GameActivity"
    android:background="@color/lightGreen"
    android:paddingTop="55dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playing Songle"
        android:textColor="@color/teal"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:id="@+id/textView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="Time Played: 00.00"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/teal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="173dp"
        android:layout_margin="10dp"
        android:paddingTop="70dp">

        <Button
            android:id="@+id/view_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal"
            android:layout_weight="0.25"
            android:text="@string/vm"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/lightGreen"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/view_collected_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@color/teal"
            android:text="@string/view_col"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/lightGreen"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/guess_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@color/teal"
            android:text="@string/guess"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/lightGreen"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/back_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/back_to_home_screen"
            android:background="@color/teal"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/lightGreen"
            android:layout_margin="10dp"/>

    </LinearLayout>


</RelativeLayout>
