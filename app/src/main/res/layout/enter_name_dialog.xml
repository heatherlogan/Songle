<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/myanalog"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:paddingTop="10dp"
              android:weightSum="1">

    <TextView
        android:id="@+id/guessHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0.17"
        android:textColor="@color/grey"
        android:text="Enter your name for the scoreboard!"
        android:textAlignment="center"
        android:paddingBottom="5dp"
        android:textSize="25dp"/>

    <EditText
        android:layout_margin="10dp"
        android:id="@+id/enterNameET"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/guessHeader"
        android:hint="Enter your name"
        android:background="#EEEEEE"
        android:textColorHint="@color/blue"
        android:ems="10"
        android:inputType="text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/enterNameET"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="15dp"
        >

        <Button
            android:textAllCaps="false"
            android:id="@+id/enterNameBttn"
            android:textColor="@color/lightGrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"/>

        <Button
            android:textAllCaps="false"
            android:id="@+id/dontEnterName"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Escape"
            android:textColor="@color/lightGrey"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/mybutton"
            android:layout_weight="0.5"/>


    </LinearLayout>

</LinearLayout>