<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/myanalog"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="1">

    <TextView
        android:id="@+id/QuitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have quit!"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_weight="0.3"/>

    <TextView
        android:id="@+id/giveUpSongTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="song"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_weight="0.31"/>

    <TextView
        android:id="@+id/giveUpArtistTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:layout_below="@id/giveUpSongTV"
        android:text="artist"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_weight="0.31"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="25dp"
        android:layout_gravity="center"
        >


        <Button
            android:id="@+id/backHomeQuit"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Back to home screen"
            android:textColor="@color/lightGrey"
            android:layout_marginLeft="10dp"
            android:textSize="19dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/mybutton"
            />



    </LinearLayout>


</LinearLayout>